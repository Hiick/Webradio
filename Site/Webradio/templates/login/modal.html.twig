<div class="modal fade" id="loginModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content border0">
           <div class="modal-header border-bottom-0" style="height: 100px;">
                <span class="rounded-circle imgModal border border1"></span>
           </div>
           <div class="row">
                <div class="col-sm-12">
                     {% if error is defined and error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path('login')}}" method="post">
                        <div class="form-group champ">
                            <input type="email" class="form-control" name="_username"  value="{{ last_username }}" placeholder="Email">
                        </div>
                        <div class="form-group champ">
                            <input type="password" name="_password" class="form-control" placeholder="Mot de passe">
                        </div>
                        <div class="form-group champ">
                            <button  type="submit" class="form-control border-0 font-weight-bold text-white" style="background-color:#EF0051;">Connexion</button>
                        </div>
                            <div class="fb-login-button" data-width="280" data-size="medium" data-button-type="login_with" data-auto-logout-link="false" data-use-continue-as="false">
                            </div>
                        <div class="d-flex flex-column align-items-center justify-content-center mt-1 h-100 mb-2">
                            <span class="d-none d-lg-inline text-gray-600 small text-center" >Pas encore inscrit ? <a class="text-pink" href="#registerModal" data-toggle="modal" data-dismiss="modal">Inscrivez-vous</a></span>
                            <span class="d-none d-lg-inline text-gray-600 small text-center" >Mot de passe oublié ? <a class="text-pink" href="#passwordLostModal" data-toggle="modal" data-dismiss="modal">C’est ici</a></span>
                        </div>
                    </form>
                  
                </div>
           </div>

        </div>
    </div>
</div>
{% include 'register/modal.html.twig' %}
{% include 'PasswordLost/modal.html.twig' %}
{% include 'login/script.html.twig' %}