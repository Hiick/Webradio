<!DOCTYPE html>
<html lang="en">
    {% include 'superAdmin/head.html.twig' %}
    {% include 'superAdmin/users/script.html.twig' %}
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    {% include 'superAdmin/sidebar.html.twig' %}
        <!-- Main Content -->
        <div id="content">
            {% include 'superAdmin/navigation.html.twig' %}
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <div class="row mt-4 mb-2">
                    <div class="col-xl-2">
                        <h4 class="h4 text-gray-800">Utilisateurs</h4>
                    </div>
                    <div class="col-xl-10 d-flex"> 

                     {{ form_start(form) }}
                        <!-- Search form -->
                        <div class="form-group has-search user">
                            <button class="fa fa-search form-control-feedback"></button>
                             {{ form_row(form.username) }}
                        </div>
                      {{ form_end(form) }}
                    </div>
                </div>
                <div class="row">
                    <!-- table -->
                    <div class="col-xl-12">
                        <div class="card shadow mb-4">
                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="row col-sm-12">
                                    <div class="table-responsive">
                                
                                    <table id="table" class"table table-bordered w-100" role="grid">
                                    <thead>
                                        <tr id='entete' role="row">
                                            <th scope='col'>Avatar</th>
                                            <th scope='col'>Username</th>
                                            <th scope='col'>Email</th>
                                            <th scope='col'>Chaîne</th>
                                            <th scope='col'>Rôle</th>
                                            <th scope='col'>Status</th>
                                            <th scope='col'>Management</th>
                                        </tr>
                                    </thead>
                                    <tbody id='corps-table'>
                                         {% for user in users %}
                                            <tr>
                                                <td>{{ user.avatar|raw }}</td>
                                                <td>{{ user.username }}</td>
                                                <td>{{ user.email }}</td>
                                                <td>{{ user.nomChaine }}</td>
                                                <td>{{ user.roleUser }}</td>
                                                <td>{{ user.status }}
                                                    {% if user.roleUser == "ADMIN" %}
                                                        </td><td>
                                                            <a href='{#{ path('') }#}' class='fa-2x far fa-edit' id=''></a>
                                                        </tr>
                                                        {% else %}
                                                            </td><td>
                                                                <a href='#removeModal' data-toggle='modal' data-dismiss='modal' class='far fa-trash-alt fa-2x' id=''></a><a href='{#{ path('') }#}' class='fa-2x far fa-edit' id=''></a>
                                                            </tr>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                         {% endfor %}
                                    </tbody>
                                    </table>
                                    <div style="height: auto; text-align: center" class="chart-area" id="pagination_data">
                                        <div id="users" class="mb-3"></div>
                                        <div id="usersdesc" class="mb-3"></div>
                                    </div>
                                    <a href="{#{path('')}#}" class="btn add_user">+</a>
                                  </div>
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->

       

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span class="text-black">Copyright &copy; Webradio - Stream - 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
{#% include 'superAdmin/Users/RemoveUser/modal.html.twig' %#}

</body>

</html>