<!DOCTYPE html>
<html lang="en">
    {% include 'superAdmin/head.html.twig' %}
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    {% include 'superAdmin/sidebar.html.twig' %}
        <!-- Main Content -->
        <div id="content">
            {% include 'superAdmin/navigation.html.twig' %}
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 d-flex">
                        <a class="retour mt-auto mb-1" href="{{ path('superadmin.users.index') }}" >
                            <i id="fleche-retour" class="fas fa-long-arrow-alt-left"></i>
                            <button id="bouton-retour" class="btn btn-sm rounded-pill">retour</button>
                        </a>
                    </div>
                </div>
                <div class="main d-flex flex-column align-items-center justify-content-center">
                    <!--img logo-->
                    {{ form_start(form) }}
                    <div class="rounded-circle avatar with-default">
                        <i class="fa-3x far fa-edit"></i>
                    </div>
                    <!--input-->
                      
                    <div class="row mb-5">
                        <div class="col-sm">
                            <div class="form-group adduser" id="name">
                                {{ form_row(form.username) }}
                            </div>

                            <div class="form-group adduser" id="emailadd">
                                {{ form_row(form.email) }}
                            </div>

                            <div class="form-group adduser" id="nomchaine">
                                {{ form_row(form.nomChaine) }} 
                            </div>

                            <div class="form-group adduser">
                                {{ form_row(form.roleUser) }}
                            </div>
                            {{ form_rest(form) }}
                            <div class="form-group adduser">
                                <button id="editUserB" data-toggle='modal' data-dismiss='modal' data-target="#editModal" class="form-control border-0 font-weight-bold text-white"  style="background-color:#EF0051;">Enregistrer</button>
                            </div>
                        </div>
                    </div>
                    <!--row-->
                 {{ form_end(form) }}
                </div>  
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
     {% include 'superAdmin/users/editUser/modalEdit.html.twig' %}
</div>
        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span class="text-black">Copyright &copy; Webradio - Stream - 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

{% include 'superAdmin/users/editUser/script.html.twig' %}


</body>

</html>